{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "baseUrl": "source",
        "paths": {
            "coin": ["coin"],
            "strategy": ["strategy"],
            "exchange": ["exchange"],
            "utilities": ["utilities"]
        },
        "plugins": [
            { "transform": "typescript-transform-paths" },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": ["source/**/*", "binaries/**/*.ts", "tests/**/*"]
}
